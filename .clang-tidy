Checks: >
  -*,
  bugprone-*,-bugprone-easily-swappable-parameters
  clang-analyzer-*,
  cppcoreguidelines-*,-cppcoreguidelines-avoid-magic-numbers,-cppcoreguidelines-pro-bounds-constant-array-index,-cppcoreguidelines-pro-bounds-pointer-arithmetic,-cppcoreguidelines-macro-usage,-cppcoreguidelines-pro-bounds-array-to-pointer-decay,-cppcoreguidelines-avoid-non-const-global-variables
  misc-*,
  modernize-*,-modernize-use-trailing-return-type,-modernize-use-auto
  performance-*,
  portability-*,
  readability-*,-readability-uppercase-literal-suffix,-readability-convert-member-functions-to-static,-readability-avoid-const-params-in-decls,-readability-identifier-length,-readability-magic-numbers
CheckOptions:
  - key: readability-identifier-naming.EnumCase
    value: CamelCase
  - key: readability-identifier-naming.EnumConstantCase
    value: CamelCase
  - key: readability-identifier-naming.StructCase
    value: CamelCase
  - key: readability-identifier-naming.MacroDefinitionCase
    value: UPPER_CASE
